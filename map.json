{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Total Crop Production by State in Malaysia (2017â€“2022)",
    "subtitle": "Source: Department of Agriculture Malaysia | Data: total_production.csv",
    "font": "Segoe UI",
    "fontSize": 22,
    "fontWeight": "bold",
    "color": "#004d26",
    "subtitleFont": "Segoe UI",
    "subtitleFontSize": 13,
    "subtitleColor": "#006400",
    "anchor": "start"
  },

  "width": 1150,
  "height": 850,
  "projection": {
    "type": "mercator",
    "center": [108, 5],         
    "scale": 3400,               
    "translate": [550, 600]      
  },

  "layer": [
    {
      "data": { "graticule": true },
      "mark": { "type": "geoshape", "stroke": "#e0e0e0", "strokeWidth": 0.5 }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/abon0028/DV2_FoodProductionMalaysia-/refs/heads/main/my.json",
        "format": { "type": "json", "property": "features" }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/abon0028/DV2_FoodProductionMalaysia-/refs/heads/main/total_production.csv",
              "format": { "type": "csv" }
            },
            "key": "State",
            "fields": ["Total Production (tonnes)"]
          }
        },
        {
          "calculate": "toNumber(datum['Total Production (tonnes)'])",
          "as": "total_production"
        }
      ],
      "mark": { "type": "geoshape", "stroke": "#ffffff", "strokeWidth": 0.8 },
      "encoding": {
        "color": {
          "field": "total_production",
          "type": "quantitative",
          "title": "Total Production (tonnes)",
          "scale": {
            "scheme": "greens",
            "domain": [0, 6000000]
          }
        },
        "tooltip": [
          { "field": "properties.name", "title": "State" },
          { "field": "total_production", "title": "Total Production (tonnes)", "format": ",.0f" }
        ]
      }
    }
  ],

  "config": {
    "background": "#fafafa",
    "view": { "stroke": "transparent" },
    "legend": {
      "titleFont": "Segoe UI",
      "labelFont": "Segoe UI",
      "titleFontSize": 14,
      "labelFontSize": 12,
      "gradientLength": 220
    }
  }
}
