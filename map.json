{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Total Crop Production by State in Malaysia (2017–2022)",
    "subtitle": "Source: Department of Agriculture Malaysia | Data: total_production.csv",
    "font": "Segoe UI",
    "fontSize": 20,
    "fontWeight": "bold",
    "color": "#2c004d",
    "subtitleFont": "Segoe UI",
    "subtitleFontSize": 13,
    "subtitleColor": "#6534af",
    "anchor": "start",
    "offset": 10
  },

  "width": 1000,
  "height": 600,

  "projection": {
    "type": "mercator",
    "center": [109.5, 4.5],
    "scale": 2600,
    "translate": [500, 350]
  },

  "layer": [
    {
      "data": { "graticule": true },
      "mark": {
        "type": "geoshape",
        "stroke": "#e0e0e0",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/abon0028/DV2_FoodProductionMalaysia-/refs/heads/main/my.json",
        "format": { "type": "json", "property": "features" }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/abon0028/DV2_FoodProductionMalaysia-/refs/heads/main/total_production.csv",
              "format": { "type": "csv" }
            },
            "key": "State",
            "fields": ["Total Production (tonnes)"]
          }
        },
        {
          "calculate": "toNumber(datum['Total Production (tonnes)'])",
          "as": "total_production"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#ffffff",
        "strokeWidth": 0.7
      },
      "encoding": {
        "color": {
          "field": "total_production",
          "type": "quantitative",
          "title": "Total Production (tonnes)",
          "scale": {
            "scheme": "purpleblue",
            "domain": [0, 6000000]
          },
          "legend": {
            "orient": "right",
            "offset": -80,         // ✅ moves legend left
            "titleFont": "Segoe UI",
            "labelFont": "Segoe UI",
            "titleFontSize": 14,
            "labelFontSize": 12,
            "gradientLength": 220,
            "titleColor": "#2c004d",
            "labelColor": "#2c004d"
          }
        },
        "tooltip": [
          { "field": "properties.name", "title": "State" },
          {
            "field": "total_production",
            "title": "Total Production (tonnes)",
            "format": ",.0f"
          }
        ]
      }
    }
  ],

  "config": {
    "background": "#dbc2f3",
    "view": { "stroke": "transparent" }
  }
}
